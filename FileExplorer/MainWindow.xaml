<Window x:Class="FileExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg">
        </ImageBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition MaxHeight="40"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="DesktopGrid" Orientation="Vertical" ></WrapPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal"  Background="WhiteSmoke">
            <Button x:Name="WindowsButton" MaxWidth="100" MaxHeight="40" Background="WhiteSmoke">
                <Image Source="Resources/startupbtn.png"></Image>
            </Button>
            <TextBlock x:Name="Clock" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>


</Window>
