<Window x:Class="FileExplorer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileExplorer"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:FileExplorer.ViewModel"
        xmlns:command="clr-namespace:FileExplorer.Infrastructure.Command"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Title="Desktop" x:Name="Window" Height="900" Width="1600" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" Icon="../Resources/Windows-XP.png">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/background.jpg">
        </ImageBrush>
    </Window.Background>


    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowOnLoad}" ></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition MaxHeight="300"></RowDefinition>
            <RowDefinition MaxHeight="40"></RowDefinition>

        </Grid.RowDefinitions>
        
        <ItemsControl ItemsSource="{Binding Directories}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
       
        <Grid x:Name="StartUp" Visibility="{Binding StartUpVisibility}" Grid.Row="1" Width="250" Background="WhiteSmoke" HorizontalAlignment="Left" >
            
            <StackPanel VerticalAlignment="Bottom">
                <Button>My Computer</Button>
                <Button Command="{Binding NotePadOpenButton}">NotePad</Button>
                <Button Command="{x:Static command:CloseWindowCommand.instance}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window} }">Exit</Button>
            </StackPanel>
            
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal"  Background="WhiteSmoke">
            <Button  MaxWidth="100" Command="{Binding StartUpButtonClick}" MaxHeight="40" Background="WhiteSmoke">
               
                <Image Source="../Resources/startupbtn.png"></Image>
            </Button>
            <!--<TextBlock  Text="{Binding Clock}" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>-->

            <ItemsControl ItemsSource="{Binding TaskBarWindows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="40" Height="40" ToolTip="{Binding Title}">
                            <Button>
                            <Image Source="{Binding Image}"></Image>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                  
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!--<Button>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/ExplorerIcon.png"></Image>
                </StackPanel>
            </Button>-->

        </StackPanel>
    </Grid>


</Window>
